# Define the registry path
$registryPath = "HKLM:\SOFTWARE\Policies\Microsoft\Windows\Personalization"

# Create the registry path if it doesn't exist
if (-not (Test-Path $registryPath)) {
    New-Item -Path $registryPath -Force
}

# Set the NoLockScreenCamera value to 1 (REG_DWORD)
New-ItemProperty -Path $registryPath -Name "NoLockScreenCamera" -Value 1 -PropertyType DWord -Force

# Confirm the change
Get-ItemProperty -Path $registryPath | Select-Object NoLockScreenCamera
